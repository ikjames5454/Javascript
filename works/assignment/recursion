let evenOrOdd = function(number){
    if (number == 0){
        return true;
    }
    else if (number < 0 && number % 2 != 0){
        return false;
 }
 else if (number < 0 && number % 2 == 0){
    return true;
}
    else if (number == 1){
        return false;
    }else{
        return evenOrOdd(number-2);
    }
}
console.log(evenOrOdd(50));
console.log(evenOrOdd(75));
console.log(evenOrOdd(-23));
console.log(evenOrOdd(-24));